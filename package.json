{
  "name": "raidhub-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prepare": "husky",
    "generate": "prisma generate",
    "dev": "tsnd --project tsconfig.build.json --respawn src/index.ts",
    "tunnel": "node prisma/tunnel.js",
    "db:start": "docker-compose -f docker-compose.yml up -d",
    "db:stop": "docker-compose -f docker-compose.yml down",
    "db:push": "prisma db push",
    "db:reset": "prisma migrate reset --force",
    "db:seed": "ts-node ./prisma/seed.ts",
    "db:migrate": "prisma migrate dev --create-only",
    "test": "jest",
    "lint": "eslint . --ext .ts,.json",
    "types": "tsc --noEmit",
    "format": "prettier --write '**/*.{ts,json}'",
    "docs": "ts-node open-api/generate.ts",
    "build": "tsc --build tsconfig.build.json",
    "start": "pm2 start ./dist/index.js --name \"raidhub-api\"  --instances 8 --time",
    "stop": "pm2 stop raidhub-api",
    "restart": "yarn && prisma generate && yarn build && pm2 restart \"raidhub-api\" --update-env"
  },
  "lint-staged": {
    "*.{ts,json}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.js": "eslint --cache --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Raid-Hub/RaidHub-API.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Raid-Hub/RaidHub-API/issues"
  },
  "homepage": "https://github.com/Raid-Hub/RaidHub-API#readme",
  "devDependencies": {
    "@asteasolutions/zod-to-openapi": "^6.3.1",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.6",
    "@types/node": "^20.8.8",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "bungie-net-core": "^2.1.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "pm2": "^5.3.0",
    "prettier": "^3.0.3",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prisma": "^5.8.1",
    "redoc-cli": "^0.13.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "5.3"
  },
  "dependencies": {
    "@prisma/client": "^5.8.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "zlib": "^1.0.5",
    "zod": "^3.22.4"
  }
}
