{
  "name": "raidhub-api",
  "version": "1.0.0",
  "description": "",
  "license": "UNLICENSED",
  "main": "index.js",
  "scripts": {
    "prepare": "husky",
    "generate": "prisma generate",
    "dev": "tsnd --project tsconfig.build.json --respawn src/index.ts",
    "tunnel": "node prisma/tunnel.js",
    "db:start": "docker-compose -f docker-compose.yml up -d",
    "db:stop": "docker-compose -f docker-compose.yml down",
    "db:seed": "ts-node ./prisma/seed.ts",
    "db:push": "prisma db push",
    "db:reset": "prisma migrate reset --force",
    "db:migration": "prisma migrate dev --create-only",
    "test": "jest",
    "lint": "eslint . --ext .ts,.json",
    "types": "tsc --noEmit",
    "format": "prettier --write '**/*.{ts,json}'",
    "docs": "ts-node open-api/generate.ts",
    "build": "tsc --build tsconfig.build.json",
    "start": "pm2 start ./dist/src/index.js --name \"raidhub-api\" --instances 8 --time",
    "stop": "pm2 stop raidhub-api",
    "start:staging": "pm2 start ./dist/src/index.js --name \"raidhub-api-staging\" --instances 2 --time",
    "stop:staging": "pm2 stop raidhub-api-staging",
    "restart": "yarn && prisma generate && yarn build && pm2 restart --update-env"
  },
  "lint-staged": {
    "*.{ts,json}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.js": "eslint --cache --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Raid-Hub/RaidHub-API.git"
  },
  "bugs": {
    "url": "https://github.com/Raid-Hub/RaidHub-API/issues"
  },
  "homepage": "https://github.com/Raid-Hub/RaidHub-API#readme",
  "devDependencies": {
    "@asteasolutions/zod-to-openapi": "^6.3.1",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.8.8",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "bungie-net-core": "^2.1.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "pm2": "^5.3.0",
    "prettier": "^3.0.3",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prisma": "^5.10.2",
    "redoc-cli": "^0.13.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "5.3"
  },
  "dependencies": {
    "@prisma/client": "^5.10.2",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "zlib": "^1.0.5",
    "zod": "^3.22.4"
  },
  "resolutions": {
    "axios": ">=1.6.0",
    "follow-redirects": ">=1.15.4",
    "core-js": "^3.1.4",
    "react-is": ">=16.8.0",
    "webpack": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testTimeout": 15000,
    "modulePathIgnorePatterns": [
      "dist/*"
    ],
    "coveragePathIgnorePatterns": [
      "prisma.ts"
    ],
    "setupFiles": [
      "dotenv/config"
    ],
    "coverageReporters": [
      "html"
    ],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ]
    }
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 4,
    "useTabs": false,
    "semi": false,
    "singleQuote": false,
    "quoteProps": "as-needed",
    "jsxSingleQuote": false,
    "trailingComma": "none",
    "bracketSpacing": true,
    "bracketSameLine": true,
    "arrowParens": "avoid",
    "endOfLine": "auto",
    "plugins": [
      "prettier-plugin-organize-imports"
    ],
    "overrides": [
      {
        "files": [
          "**/*.json"
        ],
        "options": {
          "tabWidth": 2,
          "printWidth": 80
        }
      }
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": "off",
      "no-case-declarations": "off",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "**/*.test.ts"
        ],
        "rules": {
          "@typescript-eslint/no-explicit-any": "off"
        }
      }
    ]
  }
}
