{
  "name": "raidhub-api",
  "version": "1.0.0",
  "description": "",
  "license": "UNLICENSED",
  "main": "index.js",
  "homepage": "https://api-docs.raidhub.io",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Raid-Hub/RaidHub-API.git"
  },
  "bugs": {
    "url": "https://github.com/Raid-Hub/RaidHub-API/issues"
  },
  "scripts": {
    "prepare": "husky",
    "dev": "bun --watch ./src/index.ts",
    "types": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.json",
    "format": "prettier '**/*.{ts,json}'",
    "docs": "bun run ./open-api/generate.ts",
    "compile": "bun build --compile --sourcemap ./src/index.ts --outfile $1"
  },
  "lint-staged": {
    "*.{ts,json}": [
      "eslint --fix"
    ],
    "*.js": "eslint --cache --fix"
  },
  "devDependencies": {
    "@asteasolutions/zod-to-openapi": "^6.3.1",
    "@types/amqplib": "^0.10.5",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "bun-types": "^1.0.35",
    "bungie-net-core": "2.1.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.6",
    "lint-staged": "^15.2.0",
    "prettier": "^3.0.3",
    "prettier-plugin-organize-imports": "^3.2.4",
    "redoc-cli": "^0.13.21",
    "supertest": "^6.3.4",
    "typescript": "5.4"
  },
  "dependencies": {
    "@clickhouse/client": "^1.5.0",
    "amqplib": "^0.10.3",
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "postgresql-client": "^2.11.0",
    "prom-client": "^15.1.1",
    "zlib": "^1.0.5",
    "zod": "^3.22.4"
  },
  "resolutions": {
    "axios": ">=1.6.0",
    "follow-redirects": ">=1.15.4",
    "core-js": "^3.1.4",
    "react-is": ">=16.8.0",
    "webpack": "^5.0.0"
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 4,
    "useTabs": false,
    "semi": false,
    "singleQuote": false,
    "quoteProps": "as-needed",
    "jsxSingleQuote": false,
    "trailingComma": "none",
    "bracketSpacing": true,
    "bracketSameLine": true,
    "arrowParens": "avoid",
    "endOfLine": "auto",
    "plugins": [
      "prettier-plugin-organize-imports"
    ],
    "overrides": [
      {
        "files": [
          "**/*.json"
        ],
        "options": {
          "tabWidth": 2,
          "printWidth": 80
        }
      }
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "prettier",
      "plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": "off",
      "no-case-declarations": "off",
      "no-prototype-builtins": "off",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "**/*.test.ts"
        ],
        "rules": {
          "@typescript-eslint/no-explicit-any": "off"
        }
      }
    ]
  }
}
