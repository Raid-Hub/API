{
    "name": "raidhub-api",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "dev": "nodemon -r --watch 'src/**' --ext 'ts,json' ./src/index.ts",
        "build": "tsc",
        "start": "pm2 start ./dist/index.js --name raidhub-api",
        "stop": "pm2 stop raidhub-api",
        "restart": "yarn prisma generate && yarn build && pm2 restart raidhub-api",
        "db:start": "docker-compose -f docker-compose.yml up -d",
        "db:stop": "docker-compose -f docker-compose.yml down",
        "db:push": "prisma db push",
        "db:migrate": "prisma migrate dev",
        "db:seed": "ts-node ./prisma/seed.ts"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Raid-Hub/RaidHub-API.git"
    },
    "author": "",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Raid-Hub/RaidHub-API/issues"
    },
    "homepage": "https://github.com/Raid-Hub/RaidHub-API#readme",
    "devDependencies": {
        "@types/cors": "^2.8.15",
        "@types/express": "^4.17.20",
        "@types/node": "^20.8.7",
        "bungie-net-core": "^2.1.1",
        "cors": "^2.8.5",
        "nodemon": "^3.0.1",
        "pm2": "^5.3.0",
        "prettier": "^3.0.3",
        "prisma": "^5.5.1",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.2.2"
    },
    "dependencies": {
        "@prisma/client": "^5.5.1",
        "dotenv": "^16.3.1",
        "express": "^4.18.2"
    }
}
