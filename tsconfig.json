{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,

    "types": ["bun-types", "jest"],
    "lib": ["ES6", "ESNext"],

    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    "rootDir": "."
  },
  "include": ["src/**/*.ts", "prisma/**/*.ts", "api-keys.json"],
  "exclude": ["scripts/*"]
}
