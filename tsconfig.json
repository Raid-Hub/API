{
    "compilerOptions": {
        "target": "ES2020",
        "allowJs": true,
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "types": ["node"],
        "lib": ["es6", "esnext"],
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "paths": {
            "~/data/*": ["data/*"],
            "~/routes/*": ["routes/*"],
            "~/middlewares/*": ["middlewares/*"],
            "~/util": ["util"],
            "~/prisma": ["prisma"]
        }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "tests/*", "scripts/*"]
}
