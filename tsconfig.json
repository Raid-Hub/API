{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2022",
    "moduleResolution": "Node",
    "esModuleInterop": true,

    "types": ["bun-types", "jest"],
    "lib": ["ES6", "ESNext"],

    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    "rootDir": "."
  },
  "include": [
    "src/**/*.ts",
    "prisma/seed.ts",
    "api-keys.json",
    "prisma/seed.ts"
  ],
  "exclude": ["scripts/*"]
}
