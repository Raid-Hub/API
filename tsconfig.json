{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2022",
    "moduleResolution": "Node",
    "esModuleInterop": true,

    "types": ["bun-types"],
    "lib": ["ES6", "ESNext", "DOM"],

    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    "noEmit": true,

    "rootDir": ".",

    "baseUrl": ".",
    "paths": {
      "@/auth/*": ["./src/auth/*"],
      "@/core/*": ["src/core/*"],
      "@/integrations/*": ["src/integrations/*"],
      "@/lib/*": ["src/lib/*"],
      "@/middleware/*": ["src/middleware/*"],
      "@/routes/*": ["./src/routes/*"],
      "@/schema/*": ["./src/schema/*"],
      "@/services/*": ["./src/services/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.test.ts",
    "open-api/generate.ts",
    "api-keys.json"
  ]
}
