{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2022",
    "moduleResolution": "Node",
    "esModuleInterop": true,

    "types": ["bun-types"],
    "lib": ["ES6", "ESNext", "DOM"],

    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    "noEmit": true,

    "rootDir": ".",

    "baseUrl": ".",
    "paths": {
      "@/data/*": ["src/data/*"],
      "@/middlewares/*": ["src/middlewares/*"],
      "@/schema/*": ["src/schema/*"],
      "@/services/*": ["src/services/*"],
      "@/utils/*": ["src/utils/*"],
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "api-keys.json"],
  "exclude": ["scripts/*"]
}
