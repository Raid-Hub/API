{
    "printWidth": 100,
    "tabWidth": 4,
    "useTabs": false,
    "semi": false,
    "singleQuote": false,
    "quoteProps": "as-needed",
    "jsxSingleQuote": false,
    "trailingComma": "none",
    "bracketSpacing": true,
    "bracketSameLine": true,
    "arrowParens": "avoid",
    "endOfLine": "auto",
    "plugins": ["prettier-plugin-organize-imports"],
    "overrides": [
        {
            "files": ["**/*.json"],
            "options": {
                "tabWidth": 2,
                "printWidth": 80
            }
        }
    ]
}
